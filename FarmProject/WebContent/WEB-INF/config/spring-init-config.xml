<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context" 
xmlns:mvc="http://www.springframework.org/schema/mvc" 
xmlns:aop="http://www.springframework.org/schema/aop" 
xmlns:p="http://www.springframework.org/schema/p"
xmlns:jaxws="http://cxf.apache.org/jaxws"
        xsi:schemaLocation="
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.2.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd 
        http://cxf.apache.org/jaxws   
        http://cxf.apache.org/schemas/jaxws.xsd">
        <context:component-scan base-package="com" />

        <mvc:annotation-driven />
   
        <bean id="dataSource" 
        class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" 
        p:driverClassName="oracle.jdbc.driver.OracleDriver" 
        p:url="jdbc:oracle:thin:@localhost:xe" 
        p:username="username" p:password="passwd" />
                
        <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
                <property name="dataSource" ref="dataSource" />
                <property name="hibernateProperties">
                        <props>
                                <prop key="hibernate.show_sql">true</prop>
                                <prop key="hibernate.format_sql">true</prop>
                                <prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
                                <prop key="hibernate.current_session_context_class">thread</prop>
                        </props>
                </property>
                <!--可用於JPA class -->
                <property name="configLocations" value="classpath:hibernate.cfg.xml"></property>
                <!-- <property name="annotatedClasses" > <array > <value>com.model.TAProd</value> </array> </property> -->
        </bean>
        <!-- 配置Jdbc -->
<!--         <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" p:dataSource-ref="dataSource" />
         -->
        <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
                <constructor-arg>
                        <ref bean="dataSource"/><!-- reference jndi connection -->
                </constructor-arg>
        </bean>
       
        <!-- 配置事务管理器 -->
        <bean id="transactionManager2" class="org.springframework.jdbc.datasource.DataSourceTransactionManager" p:dataSource-ref="dataSource" />

</beans>